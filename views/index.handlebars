<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Eat Da Burger!</h1>
        <hr class="my-4">
        <p>Click down below to devour any burger on the menu or add your own!</p>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <h2>Burgers Available To Eat!</h2>
            <ul>
                {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block sleep=true}} {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-sm-6">
            <h2>Burgers That Have Been Eaten!</h2>
            <ul>
                {{#each burgers}} {{#if devoured}}
                <li>
                    {{id}}. {{burger_name}}
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <h2>Add a Burger!</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="ca">Add Burger</label>
                    <input type="text" name="sleepy" class="form-control" id="ca">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>